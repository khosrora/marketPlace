<%- include("./includeBreadCrumb")%>
    <!-- my account start  -->
    <section class="main_content_area">
        <div class="container">
            <div class="account_dashboard">
                <div class="row">
                    <div class="col-sm-12 col-md-3 col-lg-3">
                        <!-- Nav tabs -->
                        <%- include("./includeMenu")%>
                            <%- include("../includes/message")%>
                    </div>
                    <div class="col-sm-12 col-md-9 col-lg-9">
                        <!-- Tab panes -->
                        <div>
                            <div class="table_desc">
                                <div class="cart_page table-responsive">
                                    <% if(products.length> 0){%>
                                        <table>
                                            <thead>
                                                <tr>
                                                    <th class="product_remove">حذف</th>
                                                    <th class="product_thumb">کد محصول</th>
                                                    <th class="product_name">محصول</th>
                                                    <th class="product-price">تاریخ</th>
                                                    <th class="product_total">قیمت</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for(product of products){%>
                                                    <tr>
                                                        <td class="product_remove">
                                                            <a href="/seller/deleteProduct/<%= product._id %>">
                                                                <i class="fa fa-trash-o"></i></a>
                                                            <a href="/seller/editProduct/<%= product._id %>">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                            <a href="">
                                                                <i class="fa fa-eye"></i>
                                                            </a>

                                                        </td>
                                                        <td class="product_thumb">
                                                            <% if(product.isAccept){%>
                                                                <a href="">
                                                                    <i class="fa fa-check-circle"
                                                                        style="color: darkgreen;"></i>
                                                                </a>
                                                                <%}else{%>
                                                                    <a href="">
                                                                        <i class="fa fa-times-circle"
                                                                            style="color: darkred;"></i>
                                                                    </a>
                                                                    <%}%>
                                                                        <a href="#">
                                                                            <%= product.code %>
                                                                        </a>
                                                        </td>
                                                        <td class="product_name"><a href="#">
                                                                <%= product.title %>
                                                            </a>
                                                        </td>
                                                        <td class="product-price">
                                                            <%= jalaliMoment(product.createdAt) %>
                                                        </td>
                                                        <td class="product_total">
                                                            <%= product.price %> تومان
                                                        </td>
                                                    </tr>
                                                    <%}%>
                                            </tbody>
                                        </table>
                                        <%}else{%>
                                            <h6>شما هنوز محصولی ثبت نکرده اید</h6>
                                            <%}%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- my account end   -->