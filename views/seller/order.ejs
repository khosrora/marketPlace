<%- include("./includeBreadCrumb")%>
    <!-- my account start  -->
    <section class="main_content_area">
        <div class="container">
            <div class="account_dashboard">
                <div class="row">
                    <div class="col-sm-12 col-md-3 col-lg-3">
                        <!-- Nav tabs -->
                        <%- include("./includeMenu")%>
                    </div>
                    <div class="col-sm-12 col-md-9 col-lg-9">
                        <!-- Tab panes -->

                        <div>
                            <div class="table_desc">
                                <div class="cart_page table-responsive">
                                    <% if(orders.length> 0){%>
                                        <table>
                                            <thead>
                                                <tr>
                                                    <th class="product_thumb">کد پرداخت</th>
                                                    <th class="product-price">تاریخ</th>
                                                    <th class="product_total">عملیات</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for(order of orders){%>
                                                    <tr>
                                                        <td class="product_thumb">
                                                            <a href="#">
                                                                <%= order.codePayment %>
                                                            </a>
                                                        </td>
                                                        <td class="product-price">
                                                            <%= jalaliMoment(order.createdAt) %>
                                                        </td>
                                                        <td class="product_total">
                                                            <a href="/seller/detailOrder/<%= order.uniqueCode %>">
                                                                مشاهده جزئیات
                                                            </a>
                                                            <% if(order.isSend){%>
                                                                <span class="badge badge-success">ارسال شده</span>
                                                                <%}else{%>
                                                                    <span class="badge badge-danger">در حال
                                                                        انتظار</span>
                                                                    <%}%>
                                                        </td>
                                                    </tr>
                                                    <%}%>
                                            </tbody>
                                        </table>
                                        <%}else{%>
                                            <h6>سفارشی برای فروشگاه شما ثبت نشده است</h6>
                                            <%}%>
                                </div>
                                <%- include("../includes/paginate") %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- my account end   -->