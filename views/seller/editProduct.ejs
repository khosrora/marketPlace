<%- include("./includeBreadCrumb")%>
    <!-- my account start  -->
    <section class="main_content_area">
        <div class="container">
            <div class="account_dashboard">
                <div class="row">
                    <div class="col-sm-12 col-md-3 col-lg-3">
                        <!-- Nav tabs -->
                        <%- include("./includeMenu")%>
                    </div>
                    <div class="col-sm-12 col-md-9 col-lg-9">
                        <!-- Tab panes -->
                        <div>
                            <div class="contact_message form">
                                <h3>ویرایش محصول </h3>
                                <%- include("../includes/errors")%>
                                    <form action="/seller/editProduct" method="POST">
                                        <input type="hidden" value="<%= product.id %>" name="id">
                                        <p>
                                            <label>عنوان <span>*</span></label>
                                            <input type="text" name="title" value="<%= product.title %>">
                                        </p>
                                        <p>
                                            <label>قیمت <span>*</span></label>
                                            <input type="number" name="price" value="<%= product.price %>">
                                        </p>
                                        <p>
                                        <div class="contact_textarea">
                                            <label> توضیحات</label>
                                            <textarea placeholder="پیام *" name="desc" class="form-control2">
                                                <%= product.desc %>
                                            </textarea>
                                        </div>
                                        </p>
                                        <p>
                                            <label>مشخصات فنی <span>*</span></label>
                                            <textarea name="technical" id="tinymce">
                                                <%= product.technical %>
                                        </textarea>
                                        </p>
                            </div>
                            <div class="login_submit">
                                <label for="remember">
                                    <input id="remember" type="checkbox" name="offer">پیشنهاد ویژه
                                </label>
                                <button type="submit"
                                    style="background: #000; color: #ffff;border : none; border-radius: .3rem;padding: .5rem;">ویرایش
                                    محصول</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- my account end   -->