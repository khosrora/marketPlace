<%- include("../includeMenuBar")%>
    <div class="col-xs-12 " style="margin-top: 10rem;">
        <div class="well with-header with-footer">
            <div class="header bordered-success">
                جدول درخواست های فروشندگی
            </div>
            <div class="table-scrollable">
                <% if(tikets.length> 0){%>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th scope="col">
                                    عنوان
                                </th>
                                <th scope="col">
                                    نام
                                </th>
                                <th scope="col">
                                    عملیات
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for (tiket of tikets) {%>
                                <tr>
                                    <td>
                                        <%= tiket.title %>
                                    </td>
                                    <td>
                                        <%= tiket.user.firstName %>
                                    </td>
                                    <td>
                                        <a href="/admin/singleTikets/<%= tiket._id %>">
                                            <span class="badge badge-success">مشاهده</span>
                                        </a>
                                        <% if(!tiket.isRead){%>
                                            <span class="badge badge-danger">مشاهده نشده</span>
                                            <%}%>
                                    </td>

                                    <%}%>
                        </tbody>
                    </table>
                    <%}else {%>
                        <div class="">
                            <h4>پیامی ثبت نشده است</h4>
                        </div>
                        <%}%>
            </div>
            <div class="footer">
            </div>
        </div>

    </div>
    </div>