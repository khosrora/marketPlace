<%- include("../includeMenuBar")%>
    <div class="col-xs-12 " style="margin-top: 10rem;">
        <div class="well with-header with-footer">
            <div class="header bordered-success">
                بلاگ های تایید شده
            </div>
            <div class="table-scrollable">
                <% if(blogs.length> 0){%>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th scope="col">
                                    عنوان
                                </th>
                                <th scope="col">
                                    نام ارسال کننده
                                </th>
                                <th scope="col">
                                    شماره تماس ارسال کننده
                                </th>
                                <th scope="col">
                                    عملیات
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for (blog of blogs) {%>
                                <tr>
                                    <td>
                                        <%= blog.title %>
                                    </td>
                                    <td>
                                        <%= blog.user.firstName %>
                                    </td>
                                    <td>
                                        <%= blog.user.email %>
                                    </td>
                                    <td>
                                        <% if(blog.isShow){%>
                                            <a href="/admin/isShow/<%= blog.id %>"><span class="badge badge-success p-2"> قابل مشاهده</span></a>
                                            <%} %>
                                                <a href="/admin/detailBlog/<%= blog.id %>"><span
                                                        class="badge badge-azure p-2">جزئیات</span></a>
                                    </td>

                                    <%}%>
                        </tbody>
                    </table>
                    <%}else {%>
                        <div class="">
                            <h4>بلاگی ثبت نشده است</h4>
                        </div>
                        <%}%>
            </div>
            <div class="footer">
            </div>
        </div>

    </div>
    </div>