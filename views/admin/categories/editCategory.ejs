<%- include("../includeMenuBar")%>

    <div class="col-xs-12" style="margin-top: 10rem;">
        <div class="widget flat radius-bordered">
            <div class="widget-header bg-danger">
                <span class="widget-caption">ساخت دسته بندی</span>
            </div>
            <div class="widget-body">
                <div id="registration-form">
                    <form role="form" action="editCategory" method="POST">
                        <div class="form-title">
                            <%- include("../../includes/message") %>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input type="hidden" class="form-control" name="id" value="<%= category._id %>" />
                                    <label for="category">نام دسته بندی اصلی</label>
                                    <span class="input-icon icon-right">
                                        <input type="text" class="form-control" name="name" value="<%= category.name %>"
                                            id="category" placeholder="مثال : پوشاک">
                                        <i class="fa fa-table blue"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <h6>دسته بندی دوم</h6>
                                <select id="e2" multiple="multiple" style="width: 100%;" name="categoryItemId">
                                    <% for (item of categoryItems){%>
                                        <option value="<%= item._id %>">
                                            <%= item.name %>
                                        </option>
                                        <%}%>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-danger">ویرایش دسته بندی</button>
                    </form>
                </div>
            </div>
        </div>
    </div>