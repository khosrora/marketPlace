<%- include("../includeMenuBar")%>
    <div class="col-xs-12 " style="margin-top: 10rem;">
        <div class="well with-header with-footer">
            <div class="header bordered-success">
                جدول درخواست های فروشندگی
            </div>
            <div class="table-scrollable">
                <% if(categories.length> 0){%>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th scope="col">
                                    نام
                                </th>
                                <th scope="col">
                                    عملیات
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for (category of categories) {%>
                                <tr>
                                    <td>
                                        <%= category.name %>
                                    </td>
                                    <td>
                                        <a href="/admin/deleteCategory/<%= category.id %>">
                                            <span class="badge badge-danger">حذف</span>
                                        </a>
                                        <a href="/admin/editCategory/<%= category.id %>">
                                            <span class="badge badge-danger">ویرایش</span>
                                        </a>
                                    </td>
                                </tr>
                                <%}%>

                        </tbody>
                    </table>
                    <%}else {%>
                        <div class="">
                            <h4>دسته بندی ثبت نشده است</h4>
                        </div>
                        <%}%>
            </div>
            <div class="footer">
                <%- include("../../includes/message") %>
            </div>
        </div>

    </div>
    </div>