<%- include("./includeBreadCrumb")%>
    <!-- my account start  -->
    <section class="main_content_area">
        <div class="container">
            <div class="account_dashboard">
                <div class="row">
                    <div class="col-sm-12 col-md-3 col-lg-3">
                        <!-- Nav tabs -->
                        <%- include("./includeMenu")%>
                    </div>
                    <div class="col-sm-12 col-md-9 col-lg-9">
                        <!-- Tab panes -->
                        <% if(tikets.length> 0) {%>
                            <div>
                                <h3>پیام های شما</h3>
                                <%- include("../../includes/message") %>
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>عنوان</th>
                                                    <th>تاریخ ارسال</th>
                                                    <th>وضعیت</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for(tiket of tikets){%>
                                                    <tr>
                                                        <td>
                                                            <%= tiket.title%>
                                                        </td>
                                                        <td>
                                                            <%= jalaliMoment(tiket.createdAt) %>
                                                        </td>
                                                        <% if(tiket.isRead===false){%>
                                                            <td>مشاهده نشده</td>
                                                            <%}else{%>
                                                                <td>مشاهده شده</td>
                                                                <%}%>
                                                                    </span></td>
                                                    </tr>
                                                    <%}%>
                                            </tbody>
                                        </table>

                                    </div>
                            </div>
                            <%} else {%>
                                <div>
                                    <h3>پیامی ارسال نشده است</h3>
                                    <a href="/user/createTiket">
                                        <p>در صورت لزوم از اینجا پیام خود را به مدیریت ارسال کنید</p>
                                    </a>
                                </div>
                                <%}%>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- my account end   -->