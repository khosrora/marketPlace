<!-- my account start  -->
<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <div class="dashboard_tab_button">
                        <ul role="tablist" class="nav flex-column dashboard-list">
                            <li><a href="#dashboard" data-toggle="tab" class="nav-link active">داشبورد</a></li>
                            <li> <a href="#orders" data-toggle="tab" class="nav-link">سفارشات</a></li>
                            <li><a href="#tikets" data-toggle="tab" class="nav-link">پیام های شما</a></li>
                            <li><a href="#address" data-toggle="tab" class="nav-link">آدرس ها</a></li>
                            <li><a href="#account-details" data-toggle="tab" class="nav-link">ویرایش حساب</a></li>
                            <li><a href="#account-tiket" data-toggle="tab" class="nav-link">ارسال پیام</a></li>
                            <li><a href="/auth/logout" class="nav-link">خروج</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade show active" id="dashboard">
                            <h3>داشبورد </h3>
                            <%- include("../../includes/message") %>
                                <p>نام کاربری : <%= user.firstName %>
                                        <%= user.lastName %>
                                </p>
                                <p>پست الکترونیک : <%= user.email %>
                                </p>
                                <p>شماره همراه : <%= user.mobile %>
                                </p>

                                <% if(!user.address){%>
                                    <p class="text-danger">لطفا آدرس را از بخش ویرایش حساب وارد کنید</p>
                                    <%}%>
                        </div>
                        <div class="tab-pane fade" id="orders">
                            <h3>سفارشات</h3>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>سفارش</th>
                                            <th>تاریخ</th>
                                            <th>وضعیت</th>
                                            <th>جمع</th>
                                            <th>اقدامات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>10 تیر 1397</td>
                                            <td><span class="success">اتمام یافته</span></td>
                                            <td>50,000 تومان برای یک محصول </td>
                                            <td><a href="cart.html" class="view">مشاهده</a></td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>10 تیر 1397</td>
                                            <td>در حال پردازش</td>
                                            <td>180,000 تومان برای یک محصول </td>
                                            <td><a href="cart.html" class="view">مشاهده</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tikets">
                            <h3>دریافت ها</h3>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>عنوان</th>
                                            <th>تاریخ ارسال</th>
                                            <th>وضعیت</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(tiket of tikets){%>
                                            <tr>
                                                <td>
                                                    <%= tiket.title%>
                                                </td>
                                                <td>
                                                    <%= jalaliMoment(tiket.createdAt) %>
                                                </td>
                                                <% if(tiket.isRead===false){%>
                                                    <td>مشاهده نشده</td>
                                                    <%}else{%>
                                                        <td>مشاهده شده</td>
                                                        <%}%>
                                                            </span></td>
                                            </tr>
                                            <%}%>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                        <div class="tab-pane" id="address">
                            <p>آدرس های زیر به صورت پیش فرض در صفحه سفارش شما استفاده خواهند شد.</p>
                            <h4 class="billing-address">آدرس صورت حساب</h4>
                            <% if(!user.address){%>
                                <p class="text-danger">لطفا آدرس را از بخش ویرایش حساب وارد کنید</p>
                                <%}else{%>
                                    <p><strong>
                                            <%= user.firstName %>
                                                <%= user.lastName %>
                                        </strong></p>
                                    <address>
                                        <%= user.address %>
                                    </address>
                                    <%}%>
                        </div>
                        <div class="tab-pane fade" id="account-details">
                            <h3>ویرایش حساب </h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form action="/user/editUser" method="POST" enctype="multipart/form-data">
                                            <label>نام</label>
                                            <input type="text" name="firstName" value="<%= user.firstName %>">
                                            <label>نام خانوادگی</label>
                                            <input type="text" name="lastName" value="<%= user.lastName %>">
                                            <label>ایمیل</label>
                                            <input type="email" name="email" dir="ltr" value="<%= user.email %>">
                                            <label>شماره همراه</label>
                                            <input type="text" name="mobile" dir="ltr" value="<%= user.mobile %>">
                                            <label>آدرس</label>
                                            <input type="text" name="address" dir="ltr" value="<%= user.address %>">
                                            <label>عکس پروفایل</label>
                                            <input type="file" name="avatar" value="<%= user.avatar %>">
                                            <span class="custom_checkbox">
                                                <label><input type="checkbox" value="1" name="offers"> دریافت پیشنهادات
                                                    ویژه</label>
                                            </span>
                                            <br>
                                            <span class="custom_checkbox">
                                                <label><input type="checkbox" value="1" name="Newsletters"> عضویت در
                                                    خبرنامه ما<br><em>لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از
                                                        صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها
                                                        و</em></label>
                                            </span>
                                            <div class="save_button primary_btn default_button">
                                                <button type="submit">ذخیره</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="account-tiket">
                            <h3>ارسال پیام به مدیریت</h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="contact_message form">
                                        <form method="POST" action="/user/createTiket">
                                            <p>
                                                <label>عنوان</label>
                                                <input name="title" placeholder="عنوان" type="text">
                                            </p>
                                            <div class="contact_textarea">
                                                <label> پیام شما</label>
                                                <textarea placeholder="پیام *" name="text"
                                                    class="form-control2"></textarea>
                                            </div>
                                            <button type="submit"> ارسال</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- my account end   -->