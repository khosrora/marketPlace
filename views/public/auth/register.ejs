<%- include("./includeBreadCrumb") %>
    <div class="customer_login mt-60">
        <div class="container">
            <div class="row">
                <!--register area start-->
                <div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
                    <div class="account_form register">
                        <h2>ثبت نام</h2>
                        <%- include("../../includes/errors") %>
                            <%- include("../../includes/alert") %>
                                <form action="/auth/register" method="post">
                                    <p>
                                        <label>نام <span>*</span></label>
                                        <input type="text" name="firstName">
                                    </p>
                                    <p>
                                        <label>نام خانوادگی <span>*</span></label>
                                        <input type="text" name="lastName">
                                    </p>
                                    <p>
                                        <label>شماره همراه <span>*</span></label>
                                        <input type="text" name="mobile">
                                    </p>
                                    <p>
                                        <label>آدرس ایمیل <span>*</span></label>
                                        <input type="text" name="email">
                                    </p>
                                    <p>
                                        <label>رمز عبور <span>*</span></label>
                                        <input type="password" name="password">
                                    </p>
                                    <div class="login_submit">
                                        <button type="submit">ثبت نام</button>
                                    </div>
                                </form>
                    </div>
                </div>
                <!--register area end-->
            </div>
        </div>
    </div>
    <button class="g-recaptcha" style="display: none;" data-sitekey="6Lc9mpMcAAAAAEu1xOZxmz8OpAjr8DToN7F5wpMQ"
        data-callback='onSubmit' data-action='submit'>Submit</button>