<!--blog area start-->
<div class="blog_page_section blog_nosidebar mt-60">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="blog_wrapper ">
                    <div class="blog_header">
                        <h1>بلاگ</h1>
                    </div>
                    <% for (blog of blogs){%>
                        <article class="single_blog mb-60">
                            <figure>
                                <div class="blog_thumb">
                                    <a href="blog-details.html"><img src="/uploads/images/blog/<%= blog.image %>"
                                            alt=""></a>
                                </div>
                                <figcaption class="blog_content">
                                    <h3><a href="blog-details.html">
                                            <%= blog.title %>
                                        </a></h3>
                                    <div class="blog_meta">
                                        <span class="author">ارسال توسط : <a href="#">
                                                <%= blog.user.firstName %>
                                            </a> / </span>
                                        <span class="post_date">در : <a href="#">
                                                <%= jalaliMoment(blog.createdAt) %>
                                            </a></span>
                                    </div>
                                    <div class="blog_desc">
                                        <p>
                                            <%- truncate(blog.desc , 400) %>
                                        </p>
                                    </div>
                                    <footer class="readmore_button">
                                        <a href="/blogDetail/<%= blog.id %>">بیشتر بخوانید</a>
                                    </footer>
                                </figcaption>
                            </figure>
                        </article>
                        <%}%>
                </div>
            </div>
        </div>
    </div>
</div>
<!--blog area end-->